                        "pointing_button": "button1"
                    },
                    "to": [
                        {
                            "shell_command": "osascript -e 'tell application \"System Events\"' -e 'keystroke \"/docs-review\"' -e 'delay 0.1' -e 'keystroke return' -e 'end tell'"
                        }

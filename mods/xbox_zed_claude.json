                        "pointing_button": "button7"
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "lb_held",
                                "value": 1
                            }
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "lb_held",
                                "value": 0
                            }
